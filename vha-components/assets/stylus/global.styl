// 水平方向轴线 (默认)
._fdr {flex-direction: row;}
// 垂直方向轴线
._fdc {flex-direction: column;}
// 盒子水平自动宽度撑满
._flexXauto {
  max-width: 100%;
  overflow-x: auto;
  overflow-y: hidden;
  flex: 1;
}
// 盒子垂直自动高度撑满
._flexYauto {
  max-height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
  flex: 1;
}
// 内容-紧密-分布 - 不可用于居中
