._UI-button
  position relative
  padding rpx(30) rpx(40)
  margin rpx(25)
  border-radius rpx(100)
  text-align center
  color #fff
  display block
  background-color #ef473a
  transition background-color 100ms
  &:active
    // background-color #c33227
    &:after
      opacity .6
      top 0
      left 0
      right 0
      bottom 0
      transition 0s
  &:after
    content ""
    display block
    position absolute
    top -10px
    left -10px
    right -10px
    bottom -10px
    pointer-events none
    border-radius rpx(100)
    background-color #c33227
    background-repeat no-repeat
    background-position 50%
    opacity 0
    transition all .2s
  
  
  
  
