// 公共组件-按钮
._button {
  // border-color: #b2b2b2;
  border-color: #ddd;
  background-color: #f8f8f8;
  color: #444;
  position: relative;
  display: inline-block;
  margin: 0;
  padding: 0 12px;
  min-width: 22px;
  min-height: 42px;
  border-width: 1px;
  border-style: solid;
  // border-radius: 2px;
  vertical-align: top;
  text-align: center;
  text-overflow: ellipsis;
  cursor: pointer; 
  overflow: hidden;
}
  ._button:hover {
    color: #444;
    text-decoration: none; }
  ._button:active{
    border-color: #ccc;
    background-color: #fafafa;
    box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.1); }

._buttonB
	cursor pointer
	color #666
	user-select none
	transition background-color 150ms, color 300ms
	&:hover
		color #000
		background-color rgba(0,0,0,0.13) !important
	&:active
		color #fff
		transition color 50ms



._UI-button
  position relative
  padding rpx(30) rpx(40)
  margin rpx(25)
  border-radius rpx(100)
  text-align center
  color #fff
  display block
  background-color #ef473a
  transition background-color 100ms
  &:active
    // background-color #c33227
    &:after
      opacity .6
      top 0
      left 0
      right 0
      bottom 0
      transition 0s
  &:after
    content ""
    display block
    position absolute
    top -10px
    left -10px
    right -10px
    bottom -10px
    pointer-events none
    border-radius rpx(100)
    background-color #c33227
    background-repeat no-repeat
    background-position 50%
    opacity 0
    transition all .2s
  
  
  
  
