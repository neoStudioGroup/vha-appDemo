._UI-title
  position relative
  margin-top rpx(60)
  margin-bottom rpx(20)
  padding rpx(16) rpx(18)
  font-size rpx(28)
  font-weight bold
  // border-left 3px solid #65a1e6
  // border-top 3px solid transparent
  // border-bottom 3px solid transparent
  color #65a1e6
  &:before
    position absolute
    left 0
    top 0
    content ' '
    width 3px
    height 100%
    border-radius 0 6px 6px 0
    background-color #65a1e6
  
  
// UI组件-列表
._UI-list
  li
    // border-1px-bottom(#eee)
    display flex
    align-items center
    height rpx(100)
    padding 0 rpx(40)
    font-size rpx(28)
    color #444
    .fa
      display inline-flex
    span 
      margin-left rpx(10)
      font-size rpx(26)
      color #aaa
    i
      position absolute
      right rpx(30)
      width rpx(60)
      font-size rpx(50)
      color #444
    &:last-child
      &:after
        display none




// 公共组件-按钮
._button {
  // border-color: #b2b2b2;
  border-color: #ddd;
  background-color: #f8f8f8;
  color: #444;
  position: relative;
  display: inline-block;
  margin: 0;
  padding: 0 12px;
  min-width: 22px;
  min-height: 42px;
  border-width: 1px;
  border-style: solid;
  // border-radius: 2px;
  vertical-align: top;
  text-align: center;
  text-overflow: ellipsis;
  cursor: pointer; 
  overflow: hidden;
}
  ._button:hover {
    color: #444;
    text-decoration: none; }
  ._button:active{
    border-color: #ccc;
    background-color: #fafafa;
    box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.1); }

._buttonB
